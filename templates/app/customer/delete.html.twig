{% extends '@layout/default.html.twig' %}

{% block title %}
    Edição de Contato - {{  parent() }}
{% endblock %}

{% block page_header %}
    Edição de contato - {{  customer.name }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-danger">
                <div class="box-body">
                    <form name="form" role="form" method="post"
                          action="{{ url('customer.delete', {id: customer.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <fieldset disabled>
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="name">Nome:</label>
                                    <input type="text" class="form-control" name="name"
                                           value="{{ customer.name }}" disabled="disabled"/>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" name="email"
                                           value="{{ customer.email }}" required disabled="disabled"/>
                                </div>
                            </div>
                        </fieldset>
                        <div class="box-footer">
                            <button class="btn btn-danger" type="submit">Confirmar exclusão</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

